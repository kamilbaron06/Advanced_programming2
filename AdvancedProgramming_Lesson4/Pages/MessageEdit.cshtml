@page
@using System.Globalization
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization

@inject IHtmlLocalizer<AdvancedProgramming_Lesson4.Resource> SharedLocalizer
@inject IViewLocalizer ViewLocalizer
@model AdvancedProgramming_Lesson4.Pages.MessageEditModel

@{
    ViewData["Title"] = @SharedLocalizer["MessageEdit"];
}

<h1>@SharedLocalizer["MessageEdit"]</h1>

<h4>
    @SharedLocalizer["ChatMessage"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ChatMessage.Id" />
            <div class="form-group">

                <input type="hidden" asp-for="ChatMessage.User" class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="ChatMessage.Message" class="control-label"></label>
                <input asp-for="ChatMessage.Message" class="form-control" />
                <span asp-validation-for="ChatMessage.Message" class="text-danger"></span>
            </div>
            <div class="form-group form-check">

                <input type="hidden" class="form-check-input" asp-for="ChatMessage.Logged" />

            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">@SharedLocalizer["Save"]</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="/MessageHub">@SharedLocalizer["Back to List"]</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
