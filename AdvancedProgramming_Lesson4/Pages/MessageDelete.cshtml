@page
@using System.Globalization
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization

@inject IHtmlLocalizer<AdvancedProgramming_Lesson4.Resource> SharedLocalizer
@inject IViewLocalizer ViewLocalizer
@model AdvancedProgramming_Lesson4.Pages.MessageDeleteModel

@{
    ViewData["Title"] = @SharedLocalizer["MessageDelete"];
}

<h1>@SharedLocalizer["MessageDelete"]</h1>

<h3>
    @SharedLocalizer["Are you sure you want to delete this?"]</h3>
<div>
    <h4>
        @SharedLocalizer["ChatMessage"]</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ChatMessage.User)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ChatMessage.User)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ChatMessage.Message)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ChatMessage.Message)
            </dd>

        </dl>

        <form method="post">
            <input type="hidden" asp-for="ChatMessage.Id" />
            <button type="submit" class="btn btn-primary">@SharedLocalizer["Delete"]</button>
            <a asp-page="/MessageHub">@SharedLocalizer["Back to List"]</a>
</form>
</div>
