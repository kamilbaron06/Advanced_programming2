@page
@using System.Globalization
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization

@inject IHtmlLocalizer<AdvancedProgramming_Lesson4.Resource> SharedLocalizer
@inject IViewLocalizer ViewLocalizer
@model AdvancedProgramming_Lesson4.Pages.MessageCreateModel

@{
    ViewData["Title"] = @SharedLocalizer["MessageCreate"];
}

<h1>@SharedLocalizer["MessageCreate"]</h1>

<h4>@SharedLocalizer["ChatMessage"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            @if (User.Identity.Name == null)
            {
                <div class="form-group">
                    <label asp-for="ChatMessage.User" class="control-label"></label>
                    <input asp-for="ChatMessage.User" class="form-control" />
                    <span asp-validation-for="ChatMessage.User" class="text-danger"></span>
                </div>
            }
            else
            {
                <input type="hidden" asp-for="ChatMessage.User" class="form-control" value='@User.Identity.Name' />
                <span asp-validation-for="ChatMessage.User" class="text-danger"></span>
            }


            <div class="form-group">
                <label asp-for="ChatMessage.Message" class="control-label"></label>
                <input asp-for="ChatMessage.Message" class="form-control" />
                <span asp-validation-for="ChatMessage.Message" class="text-danger"></span>
            </div>
            <div class="form-group form-check">

                @if (User.Identity.Name == null)
                {
                    <input type="hidden" class="form-check-input" asp-for="ChatMessage.Logged" value="false" />
                }
                else
                {
                    <input type="hidden" class="form-check-input" asp-for="ChatMessage.Logged" value="true" />
                }

            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">@SharedLocalizer["Create"]</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">@SharedLocalizer["Back to List"]</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
